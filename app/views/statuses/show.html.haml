- model_class = Statu
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @status.title
%p
  %strong= model_class.human_attribute_name(:duration) + ':'
  %br
  = @status.duration
%p
  %strong= model_class.human_attribute_name(:environment_affected) + ':'
  %br
  = @status.environment_affected
%p
  %strong= model_class.human_attribute_name(:closed) + ':'
  %br
  = @status.closed

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), statuses_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_status_path(@status), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), status_path(@status), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
